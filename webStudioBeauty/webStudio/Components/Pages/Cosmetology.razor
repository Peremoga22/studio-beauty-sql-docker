@page "/cosmetology"

@inject CosmetologyService _cosmetologyService
@using System.Globalization

<h3 style="padding-top: 7%;"></h3>
@if(!string.IsNullOrEmpty(modelTitle.TitlePage))
{
    <section class="text-center pt-32 pb-12 px-4">
        <h1 class="text-4xl font-extrabold mb-4" style="color: #f8b7d8;">
            @(string.IsNullOrEmpty(modelTitle.TitlePage)
                    ? "Додайте запис на стороні адміністратора!!!"
                    : modelTitle.TitlePage)
    </h1>
        <p class="text-gray-700 text-lg max-w-2xl mx-auto">
            @(string.IsNullOrEmpty(modelTitle.Description)
                    ? "Додайте запис на стороні адміністратора!!!"
                    : modelTitle.Description)
        </p>
    </section>
}

<section class="pt-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-white p-2 mb-5 rounded shadow-sm">
                <li class="breadcrumb-item"><a href="/" style="color: #f8b7d8;">Домашня сторінка</a></li>
                <li class="breadcrumb-item active" aria-current="page">Косметологія</li>
            </ol>
        </nav>
               
        <figure class="figure m-0">
            <div class="row g-2">
                @foreach (var item in cosmetologyTherapyCards)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm">
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.TitleCard">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold" style="color: #f8b7d8;">@item.TitleCard</h5>
                                <p class="card-text">@item.DescriptionCard</p>
                                <div class="card-footer bg-transparent border-0 text-center  mt-auto">
                                    <i class="bi bi-cash-stack me-1"></i>
                                    @item.Price.ToString("C0", new System.Globalization.CultureInfo("uk-UA"))
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </figure>
    </div>
</section>
 
@code{

    private CosmetologyTherapy modelTitle = new();
    private List<CosmetologyTherapyCard> cosmetologyTherapyCards = new();

    protected override async Task OnInitializedAsync()
    {
        modelTitle = modelTitle = await _cosmetologyService.EditCosmetologyTherapyFirstOrDefaultAsync();
        cosmetologyTherapyCards = await _cosmetologyService.GetAllCosmetologyTherapyCardListAsync();

    }
}